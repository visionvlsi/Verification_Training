<ins>Full Adder</ins>
// Code your design here
 `define DF
//`define STRUCTURAL
module fa_df_struc(a,b,cin,sum,co);

input a,b,cin;
output sum,co;

`ifdef DF
assign sum=a^b^cin,
  co=(a&b)|(a&cin)|(b&cin);
`endif

`ifdef STRUCTURAL

  xor ins1(sum1,a,b),
      ins2(sum,sum1,cin);
  and a1(c1,a,b), a2(c2,a,cin), a3(c3,b,cin);
  or (co,c1,c2,c3);

`endif

endmodule
